<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#33FF9800">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="#FF9800"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/buttonBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_back" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:hint="Edit title ..."
                android:maxLength="30"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textColorHint="#DADADA" />

            <ImageView
                android:id="@+id/buttonSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_save" />
            <ImageView
                android:id="@+id/buttonMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="?android:selectableItemBackgroundBorderless"
                android:padding="8dp"
                android:src="@drawable/ic_more"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
    </com.google.android.material.appbar.AppBarLayout>

    <jp.wasabeef.richeditor.RichEditor
        android:id="@+id/editor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBar"
        app:layout_constraintBottom_toTopOf="@id/bottonLine"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/colorLine1"
        android:visibility="gone"
        android:background="@drawable/text_color_bg1"
        app:layout_constraintBottom_toTopOf="@id/colorLine2">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_banned_sign"
            android:layout_margin="4dp"
            android:id="@+id/banned"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_1"
            android:layout_margin="4dp"
            android:id="@+id/circle_1"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_2"
            android:layout_margin="4dp"
            android:id="@+id/circle_2"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_3"
            android:layout_margin="4dp"
            android:id="@+id/circle_3"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_4"
            android:layout_margin="4dp"
            android:id="@+id/circle_4"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_5"
            android:layout_margin="4dp"
            android:id="@+id/circle_5"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_6"
            android:layout_margin="4dp"
            android:id="@+id/circle_6"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_7"
            android:layout_margin="4dp"
            android:id="@+id/circle_7"
            android:padding="8dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/colorLine2"
        android:visibility="gone"
        android:background="@drawable/text_color_bg2"
        app:layout_constraintBottom_toTopOf="@id/bottonLine">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_8"
            android:layout_margin="4dp"
            android:id="@+id/circle_8"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_9"
            android:layout_margin="4dp"
            android:id="@+id/circle_9"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_10"
            android:layout_margin="4dp"
            android:id="@+id/circle_10"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_11"
            android:layout_margin="4dp"
            android:id="@+id/circle_11"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_12"
            android:layout_margin="4dp"
            android:id="@+id/circle_12"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_13"
            android:layout_margin="4dp"
            android:id="@+id/circle_13"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_14"
            android:layout_margin="4dp"
            android:id="@+id/circle_14"
            android:padding="8dp"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_circle_15"
            android:layout_margin="4dp"
            android:id="@+id/circle_15"
            android:padding="8dp"
            />

    </LinearLayout>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bottonLine"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@color/white"
        android:layout_height="?android:actionBarSize"
        app:layout_constraintBottom_toBottomOf="parent"
       >

        <ImageView
            android:id="@+id/buttonColorPicker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_color_picker"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/buttonTextStyleBold"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_bold_format"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/buttonTextStyleItalic"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_italic_format"
            android:layout_margin="8dp"/>
        <ImageView
            android:id="@+id/buttonTextStyleunderline"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_underline_format"
            android:layout_margin="8dp"/>

        <ImageView
            android:id="@+id/buttonTextColor"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_rgb"
            android:layout_margin="8dp"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="?android:selectableItemBackgroundBorderless"
            android:src="@drawable/ic_font"
            android:padding="2dp"
            android:layout_margin="8dp"/>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:padding="7dp"
            android:gravity="center"
            android:id="@+id/spinnerLayout"
            android:orientation="horizontal"
            android:layout_marginEnd="16dp"
            android:background="@drawable/spinner_bg"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:text="14"
                android:gravity="center"
                android:id="@+id/textSize"
                />
            <Spinner
                android:id="@+id/spinnerAdd"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_marginLeft="2dp"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>



